<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />
<%= link_to "New Image", new_image_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @images.each do |image| %>

         <tr>
            <td><%= image.product_id %></td>
            <td><%= link_to "Download Image", image.attachment_url %></td>
            <td><%= button_to "Delete",  image, method: :delete, class: "btn btn-danger", confirm: "Are you sure?" %></td>
         </tr>

      <% end %>
   </tbody>

</table>
